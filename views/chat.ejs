<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Home</title>
    <style>
      body {
        background-color: #222;
        max-width: 1200px;
        margin: 0 auto;
        color: #fff;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .messages {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      .message {
        width: fit-content;
        border-top-right-radius: 20px;
        border-bottom-left-radius: 20px;
        padding: 14px 20px;
        background-color: #fff;
        color: #000;
        margin-top: 10px;
      }
      .right {
        margin-left: auto;
      }
      input {
        position: relative;
        margin-top: 20px;
        padding: 10px 0;
        padding-left: 10px;
        width: 100%;
        height: 40px;
        border: none;
        outline: none;
        border-radius: 10px;
        background-color: rgba(0, 0, 0, 0.384);
        color: #fff;
      }
      input::placeholder {
        color: #fff;
        position: absolute;
        left: 10px;
        top: 10px;
        font-size: 10px;
      }
      button {
        position: absolute;
        top: 26px;
        right: -50px;
        padding: 15px 25px;
        border: none;
        outline: none;
        border-radius: 10px;
        background-color: rgb(0, 0, 0);
        color: #fff;
        cursor: pointer;
      }
      p {
        padding: 0;
        margin: 0;
      }
      .user-join {
        text-align: center;
        color: antiquewhite;
      }
      @media (max-width: 1200px) {
        body {
          max-width: 800px;
        }
      }
      @media (max-width: 800px) {
        body {
          max-width: 600px;
        }
      }
      @media (max-width: 600px) {
        body {
          max-width: 400px;
        }
      }
    </style>
  </head>
  <body>
    <div class="msg-inputs" style="position: relative">
      <input type="text" placeholder="Send Your Message" />
      <button onclick="sendMessage()">SEND</button>
    </div>
    <div class="messages"></div>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
      const messagesEl = document.querySelector(".messages");
      const socket = io("http://localhost:3000");

      socket.on("connection");

      const sendMessage = () => {
        const msgInput = document.querySelector("input");
        const msg = msgInput.value;
        msgInput.value = "";

        const div = document.createElement("div");
        div.classList.add("message");
        div.classList.add("right");
        const span = document.createElement("span");
        span.innerText = "You";
        const p = document.createElement("p");
        p.innerText = msg;

        div.appendChild(span);
        div.appendChild(p);

        messagesEl.appendChild(div);

        socket.emit("message", msg);
      };
      socket.on("message", (data) => {
        const div = document.createElement("div");
        div.classList.add("message");
        const span = document.createElement("span");
        span.innerText = data.username;
        const p = document.createElement("p");
        p.innerText = data.data;

        div.appendChild(span);
        div.appendChild(p);

        messagesEl.appendChild(div);
      });

      socket.on("update", (data) => {
        const newUserEl = document.createElement("p");
        newUserEl.classList.add("user-join");
        newUserEl.innerText = data;
        messagesEl.appendChild(newUserEl);
      });
    </script>
  </body>
</html>
