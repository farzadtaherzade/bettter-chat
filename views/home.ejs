<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Home</title>
    <style>
      body {
        background-color: #222;
        max-width: 1200px;
        margin: 0 auto;
        color: #fff;
        min-height: 100vh;
        display: flex;
        align-items: center;
      }
      div {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }
      input {
        position: relative;
        padding: 10px 30px;
        width: 320px;
        height: 40px;
        border: none;
        outline: none;
        border-radius: 10px;
        background-color: rgba(0, 0, 0, 0.384);
        color: #fff;
      }
      input::placeholder {
        color: #fff;
        position: absolute;
        left: 10px;
        top: 10px;
        font-size: 10px;
      }
      button {
        padding: 17px;
        border: none;
        outline: none;
        border-radius: 10px;
        background-color: rgb(0, 0, 0);
        color: #fff;
      }
      h1 {
        font-size: 40px;
      }
      @media (max-width: 1200px) {
        body {
          max-width: 800px;
        }
      }
      @media (max-width: 800px) {
        body {
          max-width: 600px;
          justify-content: center;
        }
      }
      @media (max-width: 600px) {
        body {
          max-width: 400px;
        }
      }
    </style>
  </head>
  <body>
    <div class="">
      <h1>Welcome</h1>
      <input type="text" placeholder="Username" />
      <button onclick="login()">LOGIN</button>
    </div>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
      const socket = io("http://localhost:3000");

      socket.on("connection");

      const login = () => {
        const usernameInput = document.querySelector("input");
        const username = usernameInput.value;
        if (username.length >= 1) {
          socket.emit("new-user", username);
          window.location.href = "/chat";
        } else {
          alert("username is emthy pls enter you name");
        }
      };
    </script>
  </body>
</html>
